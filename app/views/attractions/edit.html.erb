<%= form_for @attraction do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :nausea_rating, "On a scale of 1-5, how much nausea will this attraction cause?" %>
  <%= f.number_field :nausea_rating, max: 5 %><br>
  <%= f.label :happiness_rating, "On a scale of 1-5, how much happiness will this attraction cause?" %>
  <%= f.number_field :happiness_rating, max: 5 %><br>
  <%= f.label :min_height, "What is the minimumm height requirement, in inches, for this ride?" %>
  <%= f.text_field :min_height%><br>
  <%= f.label :tickets, "How many tickets does this attraction cost?" %>
  <%= f.text_field :tickets %><br>
  <%= f.submit "Update Attraction" %>
<% end %>
